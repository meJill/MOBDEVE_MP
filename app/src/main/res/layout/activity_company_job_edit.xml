<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/practiquest" />
    <Button
        android:id="@+id/companyE_cancel"
        android:layout_width="147dp"
        android:layout_height="67dp"
        android:layout_gravity="start"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#F68980"
        android:enabled="true"
        android:fontFamily="@font/bauhaus_93"
        android:text="Cancel"
        android:textColor="@color/light_green"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.812"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/job_text_company" />

    <Button
        android:id="@+id/companyE_save"
        android:layout_width="147dp"
        android:layout_height="67dp"
        android:layout_gravity="start"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#6B9673"
        android:enabled="true"
        android:fontFamily="@font/bauhaus_93"
        android:text="Save"
        android:textColor="@color/light_green"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/job_text_company" />

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="327dp"
        android:layout_height="68dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="24dp"
        android:autofillHints="username"
        android:fontFamily="@font/bauhaus_93"
        android:text="Edit Internship/Job"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/job_text_company"
        android:layout_width="333dp"
        android:layout_height="202dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:autofillHints="Offered Jobs/Internships"
        android:fontFamily="@font/bauhaus_93"
        android:hint="Offered Jobs/Interships"
        android:textSize="30sp"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTv" />


</androidx.constraintlayout.widget.ConstraintLayout>
