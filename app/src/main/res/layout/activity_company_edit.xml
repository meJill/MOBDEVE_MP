<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/companyE_name"
                android:layout_width="327dp"
                android:layout_height="68dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="268dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/bauhaus_93"
                android:hint="Company Name"
                android:selectAllOnFocus="true"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.461"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/companyE_password"
                android:layout_width="327dp"
                android:layout_height="68dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/bauhaus_93"
                android:autofillHints="@string/prompt_password"
                android:hint="@string/prompt_password"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.472"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/companyE_name" />

            <EditText
                android:id="@+id/companyE_address"
                android:layout_width="327dp"
                android:layout_height="68dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="@string/prompt_password"
                android:fontFamily="@font/bauhaus_93"
                android:hint="Company Address"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.472"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/companyE_password" />

            <EditText
                android:id="@+id/companyE_contact_number"
                android:layout_width="327dp"
                android:layout_height="68dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="@string/prompt_password"
                android:fontFamily="@font/bauhaus_93"
                android:hint="Contact Number"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionDone"
                android:inputType="phone|number"
                android:selectAllOnFocus="true"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/companyE_address" />

            <EditText
                android:id="@+id/companyE_email"
                android:layout_width="327dp"
                android:layout_height="68dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:autofillHints="@string/prompt_password"
                android:fontFamily="@font/bauhaus_93"
                android:hint="Email"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/companyE_contact_number" />


            <Button
                android:id="@+id/companyE_cancel"
                android:layout_width="147dp"
                android:layout_height="67dp"
                android:layout_gravity="start"
                android:layout_marginStart="40dp"
                android:layout_marginTop="44dp"
                android:backgroundTint="#F68980"
                android:enabled="true"
                android:fontFamily="@font/bauhaus_93"
                android:text="Cancel"
                android:textColor="@color/light_green"
                android:textSize="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.812"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/companyE_email" />

            <Button
                android:id="@+id/companyE_save"
                android:layout_width="147dp"
                android:layout_height="67dp"
                android:layout_gravity="start"
                android:layout_marginStart="40dp"
                android:layout_marginTop="44dp"
                android:backgroundTint="#6B9673"
                android:enabled="true"
                android:fontFamily="@font/bauhaus_93"
                android:text="Save"
                android:textColor="@color/light_green"
                android:textSize="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.058"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/companyE_email" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="237dp"
                android:layout_height="112dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/practiquest" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="306dp"
                android:layout_height="76dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/bauhaus"
                android:text="Edit Company Profile"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textAlignment="center"
                app:flow_horizontalAlign="start"
                app:flow_verticalAlign="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>